extends layout

block content
    .container
      .row
        .col-md-12
          .panel
            .panel-body 
                  .row
                    br
                    .col-md-2.col-sm-3.text-center 
                        a.story-title(href='#')
                        img.img-circle(alt='', src='http://sm.pcmag.com/pcmag_uk/guide/t/the-best-s/the-best-small-business-accounting-software-of-2017_97qm.jpg', style='width:100px;height:100px')            
                    .col-md-10.col-sm-9
                        h3 HI! Where are you ? Please enter the zip code, and the kind of business you want to search for (e.g., “plumbers” or “Honda”). 
                        .row
                            .col-xs-9
                                form(action='/business',method='post')
                                    .input-group
                                        span.input-group-addon
                                          i.glyphicon.glyphicon-cloud 
                                        input#zipcode.form-control(type='text', name='zipcode', placeholder='Zip Code', pattern="[0-9]{5}", required)
                                      
                                     .input-group
                                        span.input-group-addon
                                          i.glyphicon.glyphicon-lock
                                        input#business.form-control(type='text', name='business', placeholder='Business', required)
                                       
                                     input.btn.btn-info(type="submit", value="Submit")                            
                             .col-xs-3
                        br
                   hr      
                  
              // /stories
              a.btn.btn-primary.pull-right.btnNext(href='/') More 
                i.glyphicon.glyphicon-chevron-right
        // /col-12
